{% extends "bootstrap.html.twig" %}
{% block body %}
    <h1>Liste de toutes les catégories disponibles</h1>
    <a href="{{ path("new_categorie") }}" class="btn btn-success my-3"> Ajouter une nouvelle catégorie</a>
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>#</th>
                <th>nom</th>
                <th>description</th>
                <th>auteur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for key , value in categories %}
                <tr>
                    <td>{{ value.id }}</td>
                    <td>{{ value.nom }}</td>
                    <td>{{ value.description }}</td>
                    <td>{{ value.auteur }}</td>
                    <td>
                        <a href="{{ path("update_categorie", { id : value.id }) }}" class="btn btn-warning">modifier</a>
                         <a href="{{ path("delete_categorie", { id : value.id }) }}" class="btn btn-danger ms-3">supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}